import java.util.Scanner; //подвключение библиотеки Сканнер

public class Counter { // создаем класс Счетчик
    String name; // поле название
    int counter; // поле значение счетчика

    public Counter(String name, int counter) { // создаем конструктор с 2 полями
        this.name = name;
        this.counter = counter;
    }

    public void getCalculate() { // создаем метод для подсчета значений
        int honest = 0; // вводим переменную для подсчета четных чисел
        int odd = 0; // вводим переменную для подсчета четных чисел
        int enterNumber = 100; // исходное число для проверки

        for (int i = 0; i < enterNumber; enterNumber--) { // создаем цикл, в котором идет проверка до тех пор
            if (enterNumber % 2 == 0) { //если проверяемое число делится без остатка на 0
                honest++; // то переменная для подсчета четных чисел увеличивается на 1
            } else { // в противном случае
                odd++; // то переменная для подсчета четных чисел увеличивается на 1
            }
            counter = honest; // поле значения Счетчик приравниваем к значению переменной четных чисел 
        }
        System.out.println("Количество четных чисел " + honest); //выводим на экран количество четных чисел
        System.out.println("Количество нечетных чисел " + odd); //выводим на экран количество нечетных чисел
    }
    public void incriment(){ // создаем метод для увеличения счетчика на 1
        counter = counter + 1; // полю значения счетчик прибавляем 1
        System.out.println("Новое количество четных чисел " + counter); //выводим на экран обновленное количество четных чисел
        System.out.println("Новое количество нечетных чисел " + counter);//выводим на экран обновленное количество нечетных чисел
    }
    public void decriment () {// создаем метод для уменьшения счетчика на 1
        counter = counter - 1;// у поля значения счетчик убавляем 1
        System.out.println("Новое количество четных чисел " + counter);//выводим на экран обновленное количество четных чисел
        System.out.println("Новое количество нечетных чисел " + counter);//выводим на экран обновленное количество нечетных чисел
    }

    public void incrimentAny(){ // создаем метод для увеличения счетчика на любое число
        Scanner sc = new Scanner(System.in); // подключаем сканер
        System.out.println("Введите любое число "); //вводим любое число
        int a = sc.nextInt(); //вводим переменную для введенного числа
        sc.close(); // закрываем сканер

        counter = counter + a; // полю значения счетчик прибавляем введенное число
        System.out.println("Новое количество четных чисел " + counter); //выводим на экран обновленное количество четных чисел
        System.out.println("Новое количество нечетных чисел " + counter); //выводим на экран обновленное количество нечетных чисел
    }

    public void decrimentAny(){ // создаем метод для уменьшения счетчика на любое число
        Scanner sc = new Scanner(System.in);// подключаем сканер
        System.out.println("Введите любое число ");//вводим любое число
        int a = sc.nextInt();//вводим переменную для введенного числа
        sc.close();// закрываем сканер

        counter = counter - a;// полю значения счетчик прибавляем введенное число
        System.out.println("Новое количество четных чисел " + counter);//выводим на экран обновленное количество четных чисел
        System.out.println("Новое количество нечетных чисел " + counter);//выводим на экран обновленное количество нечетных чисел
    }

}
