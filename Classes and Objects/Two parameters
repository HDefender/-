public class Counter3 { // создаем класс счетчика
    String name; // поле название
    int a; // поле числа, которое будем проверять

    public Counter3 (String name, int a) { // создаем конструктор
        this.name = name; // входящему название присвоить название
        this.a = a; // входящему числу присвоить числу, которое будем проверять
    }
    public void count () { // создаем метод подсчета
        
        int counter; // инициализируем переменную счетчик
        int chcounter; // инициализируем переменную четных чисел
        int nechcounter; // инициализируем переменную нечетных чисел
        
        counter = a / 2; // переменная счетчик равна: входящее число поделить на 2
        int ostatok = a % 2; //инициализируем переменную остаток, вычисляющую остаток от деления
        
        if (ostatok == 0) { // если остаток равен 0
            
            chcounter = counter; // переменная четных чисел равна счетчику
            nechcounter = counter; // переменная нечетных чисел равна счетчику
            System.out.println("Количество четных чисел равно" + " " + chcounter); // выводим в консоль значение
            System.out.println("Количество нечетных чисел равно" + " " + nechcounter);
        
        }
        
        else { //в случае, если остаток не равен 0
            
            chcounter = counter; // количество четных чисел равно счетчику
            nechcounter = counter + 1; // количесто нечетных чисел равно счетчику четных чисел плюс 1
            System.out.println("Количество четных чисел равно" + " " + chcounter);// выводим в консоль значение
            System.out.println("Количество нечетных чисел равно" + " " + nechcounter);// выводим в консоль значение
        
        }
    }
    
    public static void main(String[] args) {
        Counter3 sch = new Counter3 ("Chetn", 100); //создаем новый объект класса счетчик с входными параметрами
        sch.count(); // запускаем метод подсчета четных и нечетных чисел
    }
}
